{
    "openapi": "3.0.0",
    "info":{
        "title": "Super Price Documentation",
        "description": "This is api super price",
        "version": "1.0.0",
        "contact": {"email": "contact@email.com"}

    },
    "paths":{
        "/users":{
            "post":{
                "summary": "Create User",
                "description": "Route to create a user",
                "tags": ["Users"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "name":{
                                        "type": "string"
                                    },
                                    "lastname":{
                                        "type": "string"
                                    },
                                    "email":{
                                        "type": "string"
                                    },
                                    "password":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created"
                    },
                    "400":{
                        "description": "Invalid information sended"
                    },
                    "409":{
                        "description": "User already exists"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/sessions":{
            "post":{
                "summary": "Authentication user",
                "description": "Authentication user",
                "tags": ["Users"],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "email":{
                                        "type": "string"
                                    },
                                    "password":{
                                        "type": "string"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "properties":{
                                        "token":{
                                            "type": "string"
                                        },
                                        "user":{
                                            "type": "object",
                                            "properties":{
                                                "id":{
                                                    "type": "string"
                                                },
                                                "email":{
                                                    "type": "string"
                                                }
                                            }
                                        },
                                        "refresh_token":{
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Invalid information sended"
                    },
                    "401":{
                        "description": "Email or password incorrect"
                    },
                    "409":{
                        "description": "User already exists"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/users/avatar":{
            "patch":{
                "summary": "Upload user avatar",
                "description": "Upload avatar User",
                "tags": ["Users"],
                "security":[{"bearerAuth": []}],
                "requestBody": {
                    "content":{
                        "multipart/form-data":{
                            "schema":{
                                "type": "object",
                                "properties":{
                                    "avatar":{
                						"type": "file"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "204":{
                        "description": "OK"
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/products":{
            "post":{
                "summary": "Create product",
                "description": "Only admin can use to route to create Product",
                "tags": ["Products"],
                "security":[{"bearerAuth": []}],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "$ref": "#/components/schemas/Product"
                            },
                            "examples":{
                                "product":{
                                    "value":{
                                        "name": "FEIJAO NATURAL PRETO TIPO 2 1KG",
                                        "gtin": "7898940123025",
                                        "brand": "NÃ£o informado"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Invalid information sended"
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "409":{
                        "description": "Product already exists"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            },
            "get":{
                "summary": "List Products",
                "description": "Route to list all Products",
                "tags": ["Products"],
                "security":[{"bearerAuth": []}],
                "responses":{
                    "200":{
                        "description": "OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }

                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/products/{gtin}":{
            "get":{
                "description": "Find product by gtin",
                "summary": "find product by gtin",
                "tags": ["Products"],
                "security":[{"bearerAuth": []}],
                "produces": ["application/json"],
                "parameters":[{
                    "name": "gtin",
                    "in": "path",
                    "description": "gtin of product",
                    "required": true,
                    "type": "string",
                    "examples":{
                        "gtin":{
                            "value": "7898940123025"
                
                        }
                    }
                    
                }],
                "responses":{
                    "200":{
                        "description": "OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Invalid information sended"
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Product not found"
                    },
                    "500":{
                        "description": "Internal server Error"
                    }
                }

            }
        },
        "/products/name/":{
            "get":{
                "summary": "Find products by name",
                "description": "Route for find product by name",
                "tags": ["Products"],
                "security":[{"bearerAuth": []}],
                "parameters":[{
                    "name": "name",
                    "in": "query",
                    "description": "name of product to search",
                    "required": true,
                    "type": "string",
                    "examples":{
                        "name":{
                            "value": "FEIJAO NATURAL PRETO TIPO 2 1KG"
                
                        }
                    }
                }],
                "responses":{
                    "200":{
                        "description": "OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref": "#/components/schemas/Product"
                                    }
                                }
                            }
                        }

                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/supermarkets":{
            "post":{
                "summary": "Create supermarket",
                "description": "Route for create supermarket",
                "tags": ["Supermarkets"],
                "security":[{"bearerAuth": []}],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "name":{
                                        "type": "string"
                                    }
                                }
                            },
                            "examples":{
                                "supermarket":{
                                    "value":{
                                        "name": "Supermercados Mundial"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Supermarket"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Invalid information sended"
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "409":{
                        "description": "Supermarket already exists"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            },
            "get":{
                "summary": "List Supermarkets",
                "description": "Route to list all Supermarkets",
                "tags": ["Supermarkets"],
                "security":[{"bearerAuth": []}],
                "responses":{
                    "200":{
                        "description": "OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref": "#/components/schemas/Supermarket"
                                    }
                                }
                            }
                        }

                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                } 
            }
        },
        "/supermarkets/name/":{
            "get":{
                "summary": "Find supermarket by name",
                "description": "Route for find supermarket by name",
                "tags": ["Supermarkets"],
                "security":[{"bearerAuth": []}],
                "parameters":[{
                    "name": "name",
                    "in": "query",
                    "description": "name of supermarket to search",
                    "required": true,
                    "type": "string",
                    "examples":{
                        "name":{
                            "value": "Supermercados Mundial"
                
                        }
                    }
                }],
                "responses":{
                    "200":{
                        "description": "OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Supermarket"
                                }
                            }
                        }

                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        },
        "/prices":{
            "post":{
                "summary": "Create Price",
                "description": "Route to create a price",
                "tags": ["Prices"],
                "security":[{"bearerAuth": []}],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "supermarket_id":{
                                        "type": "string"
                                    },
                                    "product_id":{
                                        "type": "string"
                                    },
                                    "price":{
                                        "type": "number"
                                    }
                                }
                            },
                            "examples":{
                                "product":{
                                    "value":{
                                        "supermarket_id": "8d306b21-8005-4e65-b5c2-e13d5a586274",
                                        "product_id": "f17b155b-48ef-46db-b9ab-08d1dfa5eb00",
                                        "price": 4.99
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "201":{
                        "description": "Created",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Price"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Invalid information"
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Supermarket or product not found"
                    },
                    "409":{
                        "description": "Price already exists"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            },
            "get":{
                "summary": "Find Price",
                "description": "Route to find a price of product in a supermarket",
                "tags": ["Prices"],
                "security":[{"bearerAuth": []}],
                "parameters":[{
                    "name": "supermarket_name",
                    "in": "query",
                    "description": "gtin of product to search",
                    "required": false,
                    "type": "string",
                    "examples":{
                        "supermarket_name":{
                            "value": "prezunic"
                        }
                    }
                },
                {
                    "name": "gtin",
                    "in": "query",
                    "description": "name of supermarket to search",
                    "required": false,
                    "type": "string",
                    "examples":{
                        "gtin":{
                            "value": "7898940123025"
                        }
                    }
                }],
                "responses":{
                    "200":{
                        "description": "OK",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "array",
                                    "items":{
                                        "$ref": "#/components/schemas/Price"
                                    }
                                }
                            }
                        }

                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Supermarket or product not found"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            },
            "patch":{
                "summary": "Update Price",
                "description": "Route to update a price",
                "tags": ["Prices"],
                "security":[{"bearerAuth": []}],
                "requestBody": {
                    "content":{
                        "application/json":{
                            "schema": {
                                "type": "object",
                                "properties":{
                                    "price_id":{
                                        "type": "string"
                                    },
                                    "price":{
                                        "type": "number"
                                    }
                                }
                            },
                            "examples":{
                                "product":{
                                    "value":{
                                        "price_id": "b9288009-9196-4861-ab68-c420a1819a5b",
                                        "price": 4.99
                                    }
                                }
                            }
                        }
                    }
                },
                "responses":{
                    "200":{
                        "description": "Updated",
                        "content":{
                            "application/json":{
                                "schema":{
                                    "type": "object",
                                    "$ref": "#/components/schemas/Price"
                                }
                            }
                        }
                    },
                    "400":{
                        "description": "Invalid information"
                    },
                    "401":{
                        "description": "Unauthorized"
                    },
                    "404":{
                        "description": "Supermarket or product not found"
                    },
                    "409":{
                        "description": "Price already exists"
                    },
                    "500":{
                        "description": "Internal server error"
                    }
                }
            }
        }
    },
    "components":{
            "schemas": {
                "User":{
                    "type": "object",
                    "properties":{
                        "id":{
                            "type": "string"
                        },
                        "name":{
                            "type": "string"
                        },
                        "lastname":{
                            "type": "string"
                        },
                        "isAdmin":{
                            "type": "string"
                        },
                        "email":{
                            "type": "string"
                        },
                        "password":{
                            "type": "string"
                        },
                        "avatar":{
                            "type": "string"
                        },
                        "created_at":{
                            "type": "string"
                        },
                        "updated_at":{
                            "type": "string"
                        }
                    }
                },
                "Product":{
                    "type": "object",
                    "properties":{
                        "id":{
                            "type": "string"
                        },
                        "name":{
                            "type": "string"
                        },
                        "gtin":{
                            "type": "string"
                        },
                        "brand":{
                            "type": "string"
                        },
                        "thumbnail":{
                            "type": "string"
                        },
                        "created_at":{
                            "type": "string"
                        },
                        "updated_at":{
                            "type": "string"
                        }
                    }
                },
                "Supermarket":{
                    "type": "object",
                    "properties":{
                        "id":{
                            "type": "string"
                        },
                        "name":{
                            "type": "string"
                        },
                        "created_at":{
                            "type": "string"
                        },
                        "updated_at":{
                            "type": "string"
                        }
                    }
                },
                "Price":{
                        "type": "object",
                        "properties":{
                            "id":{
                                "type": "string"
                            },
                            "product_id":{
                                "type": "string"
                            },
                            "supermarket_id":{
                                "type": "string"
                            },
                            "price":{
                                "type": "string"
                            },
                            "created_at":{
                                "type": "string"
                            },
                            "updated_at":{
                                "type": "string"
                            }

                        }
                }
            },
        "securitySchemes":{
            "bearerAuth":{
                "type": "http",
                "scheme": "bearer",
                "bearerFormat": "JWT"
            }
        }
    }
}
